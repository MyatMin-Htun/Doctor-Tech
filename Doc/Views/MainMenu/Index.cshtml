
@model UserInfo

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainMenuLayout.cshtml";
}

<div class="container-fluid" style="background-color: #2F4F4F; height: 100%;">
    <div style="width: 100%; height: 100px">

    </div>
    <div class="row" style="height: 600px;">
        <div class="col-12 col-sm-5 col-md-4" style="max-height: 500px;">
            <div class="card" style="width: 100%; height: auto;">
                @if (@Model == null)
                {
                    <div class="card-text" style="padding-left: 5%; min-height: 200px;">
                        Ooops! No Data to Show
                    </div>
                }
                else
                {
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 30px;">@Model.userName</h5>
                        <div class="row">
                            <div class="mb-2 text-muted col-5 col-sm-5 col-md-5" style="font-size: 18px;">
                                Member-ID
                            </div>
                            <div class="mb-2 text-muted col-7 col-sm-7 col-md-7" style="font-size: 18px;">
                                @Model.memberID
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5 col-sm-5 col-md-5" style="font-size: 23px;">
                                Credit
                            </div>
                            <div class="col-7 col-sm-7 col-md-7" style="font-size: 23px;">
                                @Model.availableCredits
                            </div>
                        </div>
                        <hr />
                        <a href="#collapseDetail" class="btn btn-primary" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseDetail" style="width: 100%;">More Details ...</a>
                    </div>

                    <div class="collapse" id="collapseDetail">
                        <div class="card card-body">
                            <div class="mb-2 text-muted">
                                Date of Birth
                            </div>
                            <div class="card-text" style="padding-left: 5%;">
                                @Model.dob
                            </div><hr />
                            <div class="mb-2 text-muted">
                                Address
                            </div>
                            <div class="card-text" style="padding-left: 5%;">
                                @Model.address
                            </div><hr />
                            <div class="mb-2 text-muted">
                                Employer Name
                            </div>
                            <div class="card-text" style="padding-left: 5%;">
                                @Model.employerName
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-12 col-sm-7 col-md-8" style="background-color: white;">
            <br />
            <form asp-controller="MainMenu" method="post">
                <div class="col-4 col-sm-3 col-md-2 menuIcon" style="margin: auto; width: 50%; background-color: white;">
                    <input class="menuButton" id="btnCredit" type="submit" value="Use Credits" asp-action="useCredits" />
                </div>
            </form>
        </div>
    </div>
</div>
