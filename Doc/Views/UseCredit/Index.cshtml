
@model CreditDetail

@{
    ViewData["Title"] = "CreditDetail";
    Layout = "~/Views/Shared/MainMenuLayout.cshtml";
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<div class="container-fluid" style="background-color: #2F4F4F; height: 100%;">
    <div style="width: 100%; height: 100px">

    </div>

    <h1 style="color: white;">CreditDetail</h1>
    <h4 style="color: white;">@ViewData["memberID"]</h4>
    <h6 style="color: white;">@ViewData["error"]</h6>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form class="m-1 p-1 rounded" asp-controller="UseCredit" method="post" style="width: 40%; border:1px solid white;">
        <div class="form-group">
            <label asp-for="creditAmount" style="color: white;">Credit Amount</label>
            <input asp-for="creditAmount" class="form-control" />
            <span asp-validation-for="creditAmount" class="text-danger"></span>
        </div>
        <input class="btn btn-primary" style="width: 100%;" id="btnSubmit" type="submit" value="Submit" asp-action="InsertCredit" />
    </form>
    <div style="width: 100%; height: 100px">

    </div>
</div>
